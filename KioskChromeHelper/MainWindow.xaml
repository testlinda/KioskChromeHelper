<Window x:Class="KioskChromeHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KioskChromeHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Text="Url"/>
            <TextBlock Grid.Row="2" Text="Parameter"/>
            <TextBox Grid.Row="0" Grid.Column="2" Name="tbox_url"/>
            <TextBox Grid.Row="2" Grid.Column="2" Name="tbox_par"/>
        </Grid>
        <Button Grid.Row="1" Content="Launch" Height="50" Width="100" Click="Button_Click"/>
    </Grid>
</Window>
